@model IEnumerable<Gestion_Activos.Models.Class.Permission>
@{
    ViewBag.Title = "List_Permissions";
    Layout = "~/Views/MasterPage/MasterPage.cshtml";
}
@Styles.Render("~/bundle/scripts/checkboxcss")
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                @foreach (var categorie in Categories_List.permisions_categories)
                {
                <div class="row">
                    <center><h3>@categorie.Value</h3></center>
                    <div class="col-lg-8 col-lg-offset-2 col-xs-12">
                        @foreach (var item in Model)
                        {
                            if (item.Category == categorie.Key)
                            {
                            <div class="col-xs-3">
                                <div class="form-group">
                                    <label>
                                        <input type="checkbox" class="flat-red" value="@item.ID" checked="@item.Active">
                                        @item.Description
                                    </label>
                                </div>
                            </div>
                            }
                        }
                    </div>
                    <hr class="col-lg-8 col-lg-offset-2 col-xs-12">
                </div>
                }
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundle/scripts/checkboxjs")
<script src="@Url.Content("~/Scripts/Views/Rol_Permissions/List_Permissions.js")" type="text/javascript"></script>