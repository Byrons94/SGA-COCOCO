@model IEnumerable<Gestion_Activos.Models.Class.Serial>
@{
    ViewBag.Title = "Series";
    Layout = "~/Views/MasterPage/MasterPage.cshtml";
}
<div class="row">
    <div class="col-xs-12 col-lg-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <i class="fa fa-barcode"></i>
                Series
            </div>
            <div class="box-body" style="min-height:600px;">
                <div class="col-xs-12 col-lg-3">
                    <div class="box-header with-border">
                        <i class="fa fa-search"></i>
                        <h3 class="box-title">Búsqueda de serie</h3>
                    </div>
                    <div class="box-body" style="background-color:#F5F5F5">
                        <div class="form-group">
                            <label for="parametro">Búsqueda:</label>
                            <input type="text" class="form-control" id="parametro" placeholder="Buscar">
                        </div>
                    </div>
                    <div class="box-footer" style="background-color:#F5F5F5">
                        <button class="btn btn-success  pull-right" id="btn_afiliado">Buscar</button>
                    </div>
                </div>
                <div class="col-xs-12 col-lg-9">
                    <div class="box-body">
                        <table id="table1" class="table table-bordered table-striped">
                            <thead>
                                <tr class="text-light-blue">
                                    <th>
                                        @Html.DisplayNameFor(model => model.serial)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.state)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.date)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.other)
                                    </th>
                                    <th>
                                       Bitácora
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.serial)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.state)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.other)
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-block btn-info btn-sm btn-info-t" onclick="location.href='@Url.Action("Get_Serial_Details", "Product", new {serial = @item.serial})'">
                                                Ver
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="box" id="loading_table" hidden>
                            <div class="box-header">
                                <h3 id="msj-ajax">Cargando datos..</h3>
                            </div>
                            <div class="overlay">
                                <i class="fa fa-refresh fa-spin"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundle/scripts/dataTables")
<script src="@Url.Content("~/Scripts/Views/Product/Get_Serial.js")" type="text/javascript"></script>