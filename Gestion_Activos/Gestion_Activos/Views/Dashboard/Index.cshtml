@model Gestion_Activos.Models.Class.Dashboard

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/MasterPage/MasterPage.cshtml";
}
@Styles.Render("~/bundle/scripts/morriscss")
<div class="row">
    <div class="col-xs-12 col-lg-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <i class="fa fa-dashboard"></i>
                Dashboard
            </div>
            <div class="box-body" style="min-height:200px;">
                <div class="col-xs-12 col-lg-12">
                    <div class="col-xs-12">                       
                        <div class="box-body">
                            <div>
                                @* resumen abiertos *@
                                <div class="col-lg-12">
                                    <center><h3>Tickets abiertos</h3></center>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4 col-xs-12">
                                        <!-- small box -->
                                        <div class="small-box bg-aqua">
                                            <div class="inner">
                                                <h3>@Model.install</h3>
                                                <h4>Instalaciones</h4>
                                            </div>
                                            <div class="icon">
                                                <i class="fa fa-share"></i>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-4 col-xs-12">
                                        <!-- small box -->
                                        <div class="small-box bg-green">
                                            <div class="inner">
                                                <h3>@Model.visite</h3>
                                                <h4>Visitas</h4>
                                            </div>
                                            <div class="icon">
                                                <i class="fa fa-refresh"></i>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-4 col-xs-12">
                                        <!-- small box -->
                                        <div class="small-box bg-yellow">
                                            <div class="inner">
                                                <h3>@Model.retire</h3>
                                                <h4>Retiros</h4>
                                            </div>
                                            <div class="icon">
                                                <i class="fa fa-reply"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @* fin resumen abiertos *@

                               
                                <div class="col-lg-12">
                                    <hr>
                                   <center><h3>Resumen semanal</h3></center>
                                </div>
                                @* resumen semanal *@
                                <div class="col-lg-6 col-md-12 col-xs-12">
                                    <div class="box box-solid bg-gray-light">
                                        <div class="box-header" style="color:black">
                                            <i class="fa fa-th"></i>
                                            <h3 class="box-title" >Tickets creados de la semana</h3>
                                        </div>
                                        <div class="box-body border-radius-none">
                                            <div class="chart" id="line-chart" style="height: 250px;"></div>
                                        </div>
                                        <!-- /.box-body -->
                                        <div class="box-footer bg-gray-light" style="border-color:black;">
                                            <div class="row">
                                                <div class="col-xs-4 text-center" style="border-right: 1px solid black">
                                                    <input type="text" class="knob_c" data-readonly="true" data-width="60" data-height="60" data-fgColor="#00C0EF">
                                                    <div class="knob-label" style="color:black">Instalaciones</div>
                                                </div>
                                                <!-- ./col -->
                                                <div class="col-xs-4 text-center" style="border-right: 1px solid black">
                                                    <input type="text" class="knob_c1" data-readonly="true" data-width="60" data-height="60" data-fgColor="#00A65A">
                                                    <div class="knob-label" style="color:black">Visitas</div>
                                                </div>
                                                <!-- ./col -->
                                                <div class="col-xs-4 text-center">
                                                    <input type="text" class="knob_c2" data-readonly="true"  data-width="60" data-height="60" data-fgColor="#F39C12">
                                                    <div class="knob-label" style="color:black">Retiros</div>
                                                </div>
                                                <!-- ./col -->
                                            </div>
                                            <!-- /.row -->
                                        </div>
                                        <!-- /.box-footer -->
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12 col-xs-12">
                                    <div class="box box-solid bg-black-gradient">
                                        <div class="box-header">
                                            <i class="fa fa-th"></i>
                                            <h3 class="box-title">Tickets atendidos/cerrados de la semana</h3>
                                        </div>
                                        <div class="box-body border-radius-none">
                                            <div class="chart" id="line-chart2" style="height: 250px;"></div>
                                        </div>
                                        <!-- /.box-body -->
                                        <div class="box-footer bg-black-gradient">
                                            <div class="row">
                                                <div class="col-xs-4 text-center" style="border-right: 1px solid white">
                                                    <input type="text" class="knob" data-readonly="true" data-width="60" data-height="60" data-fgColor="#00C0EF">
                                                    <div class="knob-label" style="color:white">Instalaciones</div>
                                                </div>
                                           
                                                <!-- ./col -->
                                                <div class="col-xs-4 text-center" style="border-right: 1px solid white">
                                                    <input type="text" class="knob1" data-readonly="true"  data-width="60" data-height="60" data-fgColor="#00A65A">
                                                    <div class="knob-label"  style="color:white">Visitas</div>
                                                </div>
                                                <!-- ./col -->
                                                <div class="col-xs-4 text-center">
                                                    <input type="text" class="knob2" data-readonly="true"data-width="60" data-height="60" data-fgColor="#F39C12">
                                                    <div class="knob-label"  style="color:white">Retiros</div>
                                                </div>
                                                <!-- ./col -->
                                            </div>
                                            <!-- /.row -->
                                        </div>
                                        <!-- /.box-footer -->
                                    </div>
                                </div>
                                @* fin resumen semanal *@
                                    
                                <div class="col-lg-9 col-xs-12 col-xs-offset-0 border-right">
                                    <hr>
                                    <center><h3>Detalle de tickets abiertos</h3></center>
                                    <table id="table1" class="table table-hover">
                                        <thead class="fixedHeader">
                                            <tr class="text-black">
                                                <th># Ticket</th>
                                                <th>Negocio</th>
                                                <th>Cliente</th>
                                                <th>Transcurrido</th>
                                                <th>Tipo</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var instalado in Model.open)
                                            {
                                                <tr>
                                                    <td>@instalado.id</td>
                                                    <td>@instalado.local_name</td>
                                                    <td>@instalado.contact</td>
                                                    <td>@instalado.Get_Days() d</td>
                                                    <td>
                                                        @if (instalado.type == "INSTALACION")
                                                        {
                                                            <span class="label label-info">@instalado.type </span>
                                                        }
                                                        else if (instalado.type == "VISITA")
                                                        {
                                                            <span class="label label-success">@instalado.type </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="label label-warning">@instalado.type </span>
                                                        }

                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @* resumen de movimientos en afiliados *@
                                <div class="col-lg-3">
                                    <hr>
                                    <center><h3>Detalles de afiliados</h3></center>
                                    <br>
                                    <div class="col-xs-12 text-center">
                                        <div class="small-box bg-teal-gradient">
                                            <div class="inner">
                                                <h3 id="n_activos">0</h3>
                                                <p>Creados en el mes</p>
                                            </div>
                                            <div class="icon">
                                                <i class="fa fa-fw fa-location-arrow"></i>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-xs-12 text-center">
                                        <div class="small-box bg-maroon-gradient">
                                            <div class="inner">
                                                <h3 id="n_inactivos">0</h3>
                                                <p>Desactivados en el mes</p>
                                            </div>
                                            <div class="icon">
                                                <i class="fa fa-fw fa-level-down"></i>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-xs-12 text-center">
                                        <div class="small-box bg-blue-gradient">
                                            <div class="inner">
                                                <h3 id="n_total">0</h3>
                                                <p>Usuarios activos</p>
                                            </div>
                                            <div class="icon">
                                                <i class="fa fa-fw fa-user"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @** fin resumen movimientos afiliados**@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.2/raphael-min.js"></script>
@Scripts.Render("~/bundle/scripts/morrisjs")
@Scripts.Render("~/bundle/scripts/dataTables")
<script src="@Url.Content("~/Scripts/Views/Dashboard/Index.js")" type="text/javascript"></script>