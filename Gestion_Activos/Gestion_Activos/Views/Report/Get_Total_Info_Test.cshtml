@model IEnumerable<Gestion_Activos.Models.Class.Client>

@{
    ViewBag.Title = "Get_Total_Info_Test";
    Layout = "~/Views/MasterPage/MasterPage.cshtml";
}

@Styles.Render("~/bundle/styles/datepickercss")
@Scripts.Render("~/bundle/scripts/table_export")
@Styles.Render("~/bundle/styles/select2css")

<div class="row">
    <div class="col-xs-12 col-lg-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <i class="fa fa-table"></i>
                Reporte de instalaciones
            </div>
            <div class="box-body" style="min-height:600px;">
                <div class="col-xs-12">
                    @using (Html.BeginForm("Get_Installations_By_Dates", "Report", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "validate_Form(event)" }))
                    {
                        <div class="col-lg-3 col-xs-12" style="background-color:#F5F5F5;">
                            <center><h4 class="text-bold">Búsqueda</h4></center>
                            <div class="box-body">
                                <label>Seleccione un rango de fechas:</label>
                                <div class="form-group">
                                    <label>Inicio:</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="form-control pull-right" id="datepicker" name="date_start" value="@TempData["f_inicio"]" required>
                                    </div><!-- /.input group -->
                                </div>
                                <div class="form-group">
                                    <label>Fin:</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="form-control pull-right" id="datepicker1" name="date_end" value="@TempData["f_fin"]" required>
                                    </div><!-- /.input group -->
                                </div>

                                <div class="form-group">
                                    <label class="no-margin">Estatus afiliado:</label>
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="t_estatus" value="1">
                                            Activo
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="t_estatus" value="0">
                                            Inactivo
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="t_estatus" value="" checked="">
                                            Todos
                                        </label>
                                    </div>
                                </div>

                            </div>
                            <div class="box-footer" style="background-color:#F5F5F5">
                                <button class="btn btn-success  pull-right" id="btn_buscar">Buscar</button>
                            </div>
                        </div>
                    }

                    <div class="col-lg-9 col-xs-12 no-margin">
                        <div class="col-xs-11 col-lg-offset-1">
                            <div class="box-body">
                                <div>
                                    <div class="">
                                        <div class="form-group">
                                            <div class="checkbox-inline">
                                                <div class="checkbox" identity="0">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Comercio
                                                    </label>
                                                </div>

                                                <div class="checkbox" identity="1">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        # Afiliado
                                                    </label>
                                                </div>

                                                <div class="checkbox" identity="2">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Contacto
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="checkbox-inline">
                                                <div class="checkbox" identity="3">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Teléfono
                                                    </label>
                                                </div>

                                                <div class="checkbox" identity="4">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        E-Mail
                                                    </label>
                                                </div>

                                                <div class="checkbox" identity="5">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Provincia
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="checkbox-inline">
                                                <div class="checkbox" identity="6">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Coordinador
                                                    </label>
                                                </div>

                                                <div class="checkbox" identity="7">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Ejecutivo
                                                    </label>
                                                </div>

                                                <div class="checkbox" identity="8">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Software
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="checkbox-inline">
                                                <div class="checkbox" identity="9">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Tipo Industria
                                                    </label>
                                                </div>

                                                <div class="checkbox" identity="10">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Licencia
                                                    </label>
                                                </div>

                                                <div class="checkbox" identity="11">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Fecha Instalación
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="checkbox-inline">
                                                <div class="checkbox" identity="12">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Fecha compra
                                                    </label>
                                                </div>

                                                <div class="checkbox" identity="13">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Pago mensual
                                                    </label>
                                                </div>

                                                <div class="checkbox" identity="14">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Motivo retiro
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="checkbox-inline">
                                                <div class="checkbox" identity="15">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Fecha retiro
                                                    </label>
                                                </div>

                                                <div class="checkbox" identity="16">
                                                    <label>
                                                        <input type="checkbox" checked>
                                                        Dirección
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-lg-12">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <div class="btn-group pull-right">
                                <button class="btn btn-warning btn-sm dropdown-toggle" data-toggle="dropdown" id="btn_exportar"><i class="fa fa-bars"></i>Exportar tabla</button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#" onclick="$('#table1').tableExport({ type: 'json', escape: 'false' });"><img src="~/Content/dist/img/export_icons/json.png" width="24px"> JSON</a></li>
                                    <li><a href="#" onclick="$('#table1').tableExport({ type: 'xml', escape: 'false' });"> <img src="~/Content/dist/img/export_icons/xml.png" width="24px"> XML</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#" onclick="$('#table1').tableExport({ type: 'csv', escape: 'false' });"> <img src="~/Content/dist/img/export_icons/csv.png" width="24px"> CSV</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#" onclick="$('#table1').tableExport({ type: 'excel', escape: 'false' });"> <img src="~/Content/dist/img/export_icons/xls.png" width="24px">XLS</a></li>
                                    <li><a href="#" onclick="$('#table1').tableExport({ type: 'doc',   escape: 'false' });"> <img src="~/Content/dist/img/export_icons/word.png" width="24px"> Word</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="box-body" style="overflow-x: auto">
                        <div>
                            <table id="table1" class="table table-bordered table-striped" style="font-size:12px; width:100%;">
                                <thead class="text-center">
                                    <tr class="text-light-blue">
                                        <th>
                                            @Html.DisplayNameFor(model => model.local_name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.membership_number)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.contact)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.phone)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.province)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.area)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ejecutive)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.software)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.industry)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.license)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.installation)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.buy_date)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.pago)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.retire_comentary)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.retired_date)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.address)
                                        </th>
                                        @if (Model.Count() > 0)
                                        {
                                            foreach (var categoria in Model.First().categories_products)
                                            {
                                                <th>@categoria</th>
                                            }
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var client in Model)
                                    {
                                         if (client.inventary != null)
                                         {
                                            <tr>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.local_name)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.membership_number)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.contact)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.phone)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.email)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.province)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.area)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.ejecutive)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.software)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.industry)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.license)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.installation)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.buy_date)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.pago)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.retire_comentary)
                                                </td>
                                                <td style="min-width:150px;">
                                                    @Html.DisplayFor(model => client.retired_date)
                                                </td>
                                                <td style="min-width:300px;">
                                                    @Html.DisplayFor(model => client.address)
                                                </td>
                                                @foreach (var categoria in Model.First().categories_products)
                                                {
                                                    <td>
                                               
                                                        @foreach (var product in client.inventary)
                                                        {
                                                            if (categoria.Trim() == product.category.Trim())
                                                            {
                                                                @product.serial_number <br>
                                                            }
                                                        }
                                                    </td>
                                                }
                                            </tr>
                                         }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*modals*@
<div class="modal fade" id="modal_cargando" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">
                    <i class="fa fa-search"></i>
                    Consultando datos..
                </h2>
            </div>
            <div class="modal-body">
                <center><h4>Dependiendo de la cantidad de datos, esta consulta podría tomar algunos minutos...</h4></center>
            </div>
        </div>
    </div>
</div>
@* end modals *@

